<!-- res/layout/activity_character_sheet_upload.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvUploadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Your Character Sheet"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnLoadPdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Load Character Sheet (PDF)"
        app:layout_constraintTop_toBottomOf="@id/tvUploadTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvPdfFileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No file loaded"
        android:textColor="#666666"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnLoadPdf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Optional preview icon -->
    <ImageView
        android:id="@+id/ivPdfPreview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="PDF Preview"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvPdfFileName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
